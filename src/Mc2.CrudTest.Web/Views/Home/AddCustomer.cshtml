@model CreateCustomerViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>

@if (Model.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @Model.Error.Message
    </div>
}

<form asp-action="AddCustomer" method="post">
    <div class="mb-3">
        <label for="first-name" class="form-label">First Name</label>
        <input type="text" class="form-control" asp-for="Customer.FirstName">
    </div>
    <div class="mb-3">
        <label for="last-name" class="form-label">Last Name</label>
        <input type="text" class="form-control" asp-for="Customer.LastName">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" asp-for="Customer.Email">
    </div>
    <div class="mb-3">
        <label for="phone" class="form-label">Phone Number</label>
        <input type="tel" class="form-control" asp-for="Customer.PhoneNumber">
    </div>
    <div class="mb-3">
        <label for="dob" class="form-label">Date of Birth</label>
        <input type="date" class="form-control" asp-for="Customer.DateOfBirth">
    </div>
    <div class="mb-3">
        <label for="bank-account" class="form-label">Bank Account Number</label>
        <input type="text" class="form-control" asp-for="Customer.BankAccountNumber">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>